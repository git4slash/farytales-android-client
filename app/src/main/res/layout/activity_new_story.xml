<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewStoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView_text_StoryName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_TaleName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView_StoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView_text_StoryText"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_TaleText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5" />

    <Button
        android:id="@+id/button_create_Story"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_text_Create"
        android:onClick="createTale"
        />
</LinearLayout>